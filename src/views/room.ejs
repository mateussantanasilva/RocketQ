                            <path d="M19.1667 17.5V15.8333C19.1662 15.0948 18.9204 14.3773 18.4679 13.7936C18.0154 13.2099 17.3819 12.793 16.6667 12.6083" stroke="url(#paint2_linear_10922_601)" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                            <path d="M13.3335 2.60833C14.0505 2.79192 14.686 3.20892 15.1399 3.79359C15.5937 4.37827 15.84 5.09736 15.84 5.8375C15.84 6.57764 15.5937 7.29673 15.1399 7.88141C14.686 8.46608 14.0505 8.88308 13.3335 9.06667" stroke="url(#paint3_linear_10922_601)" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                            </g>
                            <defs>
                            <linearGradient id="paint0_linear_10922_601" x1="16.7923" y1="4.93616" x2="15.2894" y2="18.9475" gradientUnits="userSpaceOnUse">
                            <stop stop-color="#5498FF"/>
